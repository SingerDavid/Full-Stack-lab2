extends layout

block content
  h1= title
  p Are you sure you want to delete the following data?
  ul.temp-list
    li= temp.first
    li= temp.last
    li= temp.email
    li= temp.note
  hr
  form(method='POST', action=`/temp/${temp.id}/delete`)
    button(type='delete') Confirm Delete
    | 
    a(href=`/temp/${temp.id}`) Cancel